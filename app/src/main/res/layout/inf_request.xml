<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:gravity="center_vertical">
    xmlns:android="http://schemas.android.com/apk/res/android" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:gravity="center">

        <RelativeLayout
            android:id="@+id/cancleLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center">

            <com.rey.material.widget.ImageButton
                android:id="@+id/btn_cancel"
                style="@style/Material.Drawable.Ripple.Touch"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_clear_red_a700_24dp"
                app:rd_cornerRadius="5dp"
                app:rd_enable="true"
                app:rd_rippleColor="@color/red"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/acceptLayout"
            android:layout_toRightOf="@+id/cancleLayout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.collect_up.c_up.util.ComplexAvatarView
                android:id="@+id/image_view_picture"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cav_textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                app:cav_textColor="@android:color/white"
                app:cav_textSize="20sp">

            </com.collect_up.c_up.util.ComplexAvatarView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:text="New Text"
                    android:textColor="@android:color/black"/>

                TextView
                android:id="@+id/text_view_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:text="New Text"
                android:textColor="@color/divider"
                android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/acceptLayout"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <com.rey.material.widget.ImageButton
                android:id="@+id/btn_accept"
                style="@style/Material.Drawable.Ripple.Touch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/button_following"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_done_green_a700_24dp"
                app:rd_cornerRadius="5dp"
                app:rd_enable="true"
                app:rd_rippleColor="@color/green"/>


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>