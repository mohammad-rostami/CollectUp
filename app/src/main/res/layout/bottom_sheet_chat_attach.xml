<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:baselineAligned="false"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_chat_attach_file"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/file"
            android:textColor="@color/divider"/>

        <TextView
            android:id="@+id/text_view_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_chat_attach_camera"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/camera"
            android:textColor="@color/divider"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_view_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_chat_attach_gallery"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/gallery"
            android:textColor="@color/divider"/>

        <TextView
            android:id="@+id/text_view_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_chat_attach_video"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/video"
            android:textColor="@color/divider"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_view_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_chat_attach_location"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/location"
            android:textColor="@color/divider"/>

        <TextView
            android:id="@+id/text_view_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableTop="@drawable/ic_chat_attach_hide"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:textColor="@color/divider"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


    </LinearLayout>
</LinearLayout>