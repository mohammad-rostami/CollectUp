<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_margin="1dp"
        android:layout_height="120dp"
        android:layout_width="120dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/each_image_view"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.AppCompatImageView>
        <com.yalantis.ucrop.SmoothCheckBox
            android:layout_alignEnd="@+id/each_image_view"
            android:layout_margin="10dp"
            android:id="@+id/each_checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="15dp"
            app:ucrop_color_checked="#447eeb"
            android:background="@null"
            android:layout_alignRight="@+id/each_image_view" />
        <TextView
            android:text="Time"
            android:id="@+id/Video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/each_image_view"
            android:layout_alignRight="@+id/each_image_view"
            android:layout_alignBottom="@+id/each_image_view"
            android:layout_margin="7dp"
            android:textColor="#fff"
            android:background="#5555"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_videocam_white_18dp"
            />


    </RelativeLayout>

</LinearLayout>

